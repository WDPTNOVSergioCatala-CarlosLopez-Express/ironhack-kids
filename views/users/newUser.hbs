<style>
  button.btn-primary {
    background-color: grey;
    border-color: grey;
  }

  button.btn-primary:hover {
    background-color: rgba(234, 84, 85, 1);
    border-color:rgba(234, 84, 85, 1) ;
  }
</style>

<h1 >Registrate</h1>

{{#if errors}}
  <div class="alert alert-danger">
    Revisa el formulario.
  </div>
{{/if}}

<form action="/users" method="POST" enctype="multipart/form-data">
  <div class="mb-3">
    <label for="name" class="form-label">Nombre</label>
    <input type="text" value="{{user.name}}" name="name" class="form-control {{#if errors.name}}is-invalid{{/if}}" id="name">
    {{#if errors.name}}
      <div class="invalid-feedback">
        {{errors.name.message}}
      </div>
    {{/if}}
  </div>
  
  <div class="mb-3">
    <label for="lastName" class="form-label">Apellido</label>
    <input type="text" value="{{user.lastName}}" name="lastName" class="form-control {{#if errors.lastName}}is-invalid{{/if}}" id="lastName">
    {{#if errors.lastName}}
      <div class="invalid-feedback">
        {{errors.lastName.message}}
      </div>
    {{/if}}
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" value="{{user.email}}" name="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" id="email">
    {{#if errors.email}}
      <div class="invalid-feedback">
        {{errors.email.message}}
      </div>
    {{/if}}
  </div>

  <div class="mb-3">
    <label for="password" class="form-label">Contrase√±a</label>
    <input type="password" value="{{user.password}}" name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" id="password">
    {{#if errors.password}}
      <div class="invalid-feedback">
        {{errors.password.message}}
      </div>
    {{/if}}
  </div>

  <div class="mb-3">
    <label for="code" class="form-label">Clave de registro</label>
    <input type="text" value="{{code}}" name="code" class="form-control {{#if errors.code}}is-invalid{{/if}}" id="code">
    {{#if errors.code}}
      <div class="invalid-feedback">
        {{errors.code.message}}
      </div>
    {{/if}}
  </div>

  <div class="mb-3">
    <label for="personalID" class="form-label">Personal ID</label>
    <input type="text" value="{{personalID}}" name="personalID" class="form-control {{#if errors.personalID}}is-invalid{{/if}}" id="personalID">
    {{#if errors.personalID}}
      <div class="invalid-feedback">
        {{errors.personalID.message}}
      </div>
    {{/if}}
  </div>

  <div class="input-group mb-3">
    <label class="input-group-text" for="profilePic"><i class="fa fa-picture-o"></i></label>
    <input type="file" name="profilePic" class="form-control {{#if errors.profilePic}}is-invalid{{/if}}" id="profilePic">
  </div>

  
  <button type="submit" class="btn btn-primary">Crear</button>
</form>